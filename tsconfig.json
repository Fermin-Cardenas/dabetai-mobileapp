{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",  // ← Agrega esto
    "paths": {
      "@/*": [
        "./src/*",   // ← Para archivos de src
        "./assets/*" // ← Para archivos de assets
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}